name: bankruptcy-xgboost

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      data_path: {type: str, default: "data_clean.csv"}
      n_estimators: {type: int, default: 200}
      max_depth: {type: int, default: 6}
      learning_rate: {type: float, default: 0.05}
      subsample: {type: float, default: 0.8}
    command: >
      python modelling.py
      {data_path}
      {n_estimators}
      {max_depth}
      {learning_rate}
      {subsample}
